<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.registroleche.PerfilEmpleado" >

  <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombres:" />

        <EditText
            android:id="@+id/nombre_pro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" 
            android:digits="qwertzuiopasdfghjklyxcvbnñm QWERTZUIOPASDFGHJKLYXCVBNMÑ"
            android:background="@android:drawable/edit_text"/>
        <requestFocus />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apellidos" />

        <EditText
            android:id="@+id/apellido_pro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" 
            android:digits="qwertzuiopasdfghjklyxcvbnñm QWERTZUIOPASDFGHJKLYXCVBNMÑ"
            android:background="@android:drawable/edit_text">

            
        </EditText>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telefono" />

        <EditText
            android:id="@+id/telefono_pro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" android:background="@android:drawable/edit_text"
             android:inputType="numberDecimal"
          android:maxLength="9"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correo Electronico " />

        <EditText
            android:id="@+id/direccion_pro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" android:background="@android:drawable/edit_text"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre Usuario:" />

        <EditText
            android:id="@+id/username_emp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" android:background="@android:drawable/edit_text"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contraseña" />

        <EditText
            android:id="@+id/password_emp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" 
            android:background="@android:drawable/edit_text"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/button1"
                style="@style/loginBoton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:layout_weight="0.20"
                android:text="Actualizar"
                android:onClick="ProcesoActualizar"
                 />

            <Button
                style="@style/loginBoton"
                android:id="@+id/button2"
                android:layout_width="59dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.29"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="10dip"
                android:text="Eliminar" 
                android:onClick="Eliminar"
                />

            <Button
                style="@style/loginBoton"
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="10dip"
                android:text="Cancelar" 
                android:onClick="Cancelar"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
