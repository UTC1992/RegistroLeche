<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.registroleche.MenuImagen" >

    <LinearLayout
        style="@style/titulos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="368dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Puede elegir entre las siguientes rutas:" />

                <Button
                    android:id="@+id/button1"
                      style="@style/botonmenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                      android:layout_marginTop="10dip"
                    android:text="Barrio Oriente"
                    android:onClick="Barrio1" />

                <Button
                    android:id="@+id/button2"
                      style="@style/botonmenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                      android:layout_marginTop="10dip"
                      android:onClick="Barrio2"
                    android:text=" Barrio Chanchalito " />

                <Button
                    android:id="@+id/button3"
                      style="@style/botonmenu"
                    android:layout_width="match_parent"
                      android:layout_marginTop="10dip"
                    android:layout_height="wrap_content"
                    android:onClick="Barrio3"
                    android:text="Barrio Palama" />

                <Button
                    android:id="@+id/button4"
                      style="@style/botonmenu"
                        android:layout_marginTop="10dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Barrio Pungahuito" 
                    android:onClick="Barrio4"/>

                <Button
                    android:id="@+id/button6"
                      style="@style/botonmenu"
                        android:layout_marginTop="10dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="Barrio5"
                    android:text="Barrio San Isidro" />

                <Button
                    android:id="@+id/button5"
                      style="@style/botonmenu"
                        android:layout_marginTop="10dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MenÃº Principal" 
                    android:onClick="Principal"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>
