<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.registroleche.MenuInicio" >

    <LinearLayout
        style="@style/titulos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Puede elegir entre las siguientes opciones:" />

                <Button
                    android:id="@+id/button1"
                    style="@style/botonmenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:onClick="Perfil"
                    android:text="Mi Perfil" />

                <Button
                    android:id="@+id/button2"
                    style="@style/botonmenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:onClick="Proveedores"
                    android:text="Proveedores" />

                <Button
                    android:id="@+id/button3"
                    style="@style/botonmenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:onClick="Compras"
                    android:text="Compras" />

                <Button
                    android:id="@+id/button4"
                    style="@style/botonmenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:onClick="MostrarReportes"
                    android:text="Reportes" />

                <Button
                    android:id="@+id/button5"
                    style="@style/botonmenu"
                    android:layout_marginTop="10dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rutas" 
                    android:onClick="Rutas"/>

                <Button
                    android:id="@+id/Button01"
                    style="@style/botonmenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:onClick="Salir"
                    android:text="Salir" />
            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>